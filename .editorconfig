# EditorConfig helps maintain consistent coding styles across editors
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.ps1]
# PowerShell often prefers 4-space indentation
indent_size = 4

[*.md]
# Allow trailing spaces for Markdown hard line breaks
trim_trailing_whitespace = false

[.github/workflows/*.yml]
indent_size = 2
